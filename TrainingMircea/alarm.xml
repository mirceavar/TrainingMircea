<?xml version="1.0" encoding="UTF-8"?>

<node>
  <interface name="com.training.dbus.Interface">

    <signal name="ringAlarm">
		<arg name="event" type="s" />
    </signal>

    <method name="setTime">
		<arg name="hour" type="y" direction="in"/>
		<arg name="minute" type="y" direction="in"/>
		<arg name="second" type="y" direction="in"/>
    </method>

    <method name="setAlarmTime">
		<arg name="hour" type="y" direction="in"/>
		<arg name="minute" type="y" direction="in"/>
		<arg name="second" type="y" direction="in"/>
    </method>

    <method name="getAlarmStatus">
		<arg name="status" type="b" direction="out"/>
    </method>

    <method name="setAlarmStatus">
		<arg name="status" type="b" direction="in"/>
    </method>

  </interface>
</node>
